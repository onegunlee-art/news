{
    "name": "news-context/analysis",
    "description": "AI 기반 뉴스 맥락 분석 서비스",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "News Context Analysis Team"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/backend/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "lint": "find src/backend -name '*.php' -exec php -l {} \\;",
        "deploy": "echo 'Deploying...' && php deploy.php"
    }
}
